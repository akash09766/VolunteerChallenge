<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:layout_marginTop">@dimen/dimen_08</item>
    </style>

    <style name="DropDownTextFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_08</item>
    </style>

    <style name="buttonFilledStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dimen_56</item>
        <item name="android:layout_marginTop">@dimen/dimen_08</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="buttonOutLinedStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dimen_56</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:layout_marginTop">@dimen/dimen_08</item>
    </style>
</resources>